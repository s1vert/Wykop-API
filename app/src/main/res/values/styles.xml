<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorPrimaryInverse">@color/primaryTextInverse</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:textColorSecondaryInverse">@color/secondaryTextInverse</item>
        <item name="android:textColorTertiary">@color/tertiaryText</item>
        <item name="android:textColorTertiaryInverse">@color/tertiaryTextInverse</item>
        <item name="android:divider">@color/dividerColor</item>
    </style>

    <style name="Title" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="Title.Inverse" parent="Title">
        <item name="android:textColor">@color/primaryTextInverse</item>
    </style>

    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.Inverse" parent="Text">
        <item name="android:textColor">@color/secondaryTextInverse</item>
    </style>

    <style name="Text.Small" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tertiaryText</item>
    </style>

    <style name="Text.Small.Inverse" parent="Text.Small">
        <item name="android:textColor">@color/tertiaryTextInverse</item>
    </style>

    <style name="Text.Clickable" parent="Text">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.Clickable.Big" parent="Text.Clickable">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Label" parent="Text.Small">
        <item name="android:background">@drawable/label</item>
    </style>

    <style name="Label.Inverse" parent="Text.Small.Inverse">
        <item name="android:textColor">@color/secondaryTextInverse</item>
        <item name="android:background">@drawable/label_inverse</item>
    </style>

</resources>
